.main
  .main__sign
    = form_tag root_path do
      .main__sign__header
        新規会員情報入力
      .main__sign__contents
        .sign-box
          .require_box
            %li ニックネーム　
            %li.p
              必須
          .input_form
            %input{type: "text", class: "nickname_text", placeholder: "例）FURIMA一郎"}
        .sign-box
          .require_box
            %li メールアドレス　
            %li.p
              必須
          .input_form
            %input{type: "text", class: "mail_text", placeholder: "PC・携帯どちらでも可"}
        .sign-box
          .require_box
            %li パスワード　
            %li.p
              必須
          .input_form
            %input{type: "text", class: "pass_text", placeholder: "7文字以上の半角英数字"}
            %li ※英字と数字の両方を含めて入力してください
      .main__sign__profile
        .profile-header
          %h1 本人確認
          %ul
            %li 安心・安全にご利用いただくために、お客さまの本人情報の登録にご協力ください。他のお客さまに公開されることはありません
        .profile-main
          .sign-profile-box
            .require_box
              %li お名前（全角）
              %li.p
                必須
            .input_form
              %input{type: "text", class: "familyname_text", placeholder: "例）大西"}
              %input{type: "text", class: "firstname_text", placeholder: "例）賢治"}
          .sign-profile-box
            .require_box
              %li カナ（全角）
              %li.p
                必須
            .input_form
              %input{type: "text", class: "familyname_text", placeholder: "例）オオニシ"}
              %input{type: "text", class: "firstname_text", placeholder: "例）ケンジ"}
          .sign-profile-box
            .require_box
              %li 生年月日　
              %li.p
                必須
            .birthday_form
              -# != sprintf(f.date_select(:birthday, prefix:'birthday',with_css_classes:'XXXXX', prompt:"--",use_month_numbers:true, start_year:Time.now.year, end_year:1900, date_separator:'%s'),'年','月')+'日'
        .profile__address
          .profile__address__box
            .require_box
              %li 郵便番号　
              %li.p
                必須
            .address-input_form
              %input{type: "text", class: "post_text", placeholder: "例）123-4567"}
          .profile__address__box
            .require_box
              %li 都道府県　
              %li.p
                必須
            .address-input_form
              %input{type: "text", class: "post_text", placeholder: "例）大阪府"}
          .profile__address__box
            .require_box
              %li 市町村区　
              %li.p
                必須
            .address-input_form
              %input{type: "text", class: "post_text", placeholder: "例）大阪市葛飾区"}
          .profile__address__box
            .require_box
              %li 番地　
              %li.p
                必須
            .address-input_form
              %input{type: "text", class: "post_text", placeholder: "例）青山1-1-1"}
          .profile__address__box
            .require_box
              %li マンション・アパート名　
              %li.p
                任意
            .address-input_form
              %input{type: "text", class: "post_text", placeholder: "例）難波ビル551"}
          .profile__address__box
            .require_box
              %li 電話番号　
              %li.p
                任意
            .address-input_form
              %input{type: "text", class: "post_text", placeholder: "例)09012345678"}
          
      .main__sign__footer

