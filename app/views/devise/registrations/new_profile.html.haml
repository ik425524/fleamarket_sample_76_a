.sign-header
  = render "sign_header"
.sign__main
  .sign__main__contents
    .sign-profile__main
      = form_for @profile do |f|
        = render "devise/shared/error_messages", resource: @profile
        .sign-main__header
          本人確認情報入力
        .sign-profile__header
          %ul
            %li ※安心・安全にご利用いただくために、お客さまの本人情報の登録にご協力ください。他のお客さまに公開されることはありません
        .sign-profile
          .sign-profile__box
            .require
              %span.require__list お名前（全角）
              %span.require__form 必須
            .input_form
              = f.text_field :first_name, class: "name_text", placeholder: "例）鈴木"
              = f.text_field :last_name, class: "name_text", placeholder: "例）太郎"
          .sign-profile__box
            .require
              %span.require__list フリガナ（全角）
              %span.require__form 必須
            .input_form
              = f.text_field :first_kana, class: "name_text", placeholder: "例）スズキ"
              = f.text_field :last_kana, class: "name_text", placeholder: "例）タロウ"
          .sign-form__box
            .require
              %span.require__list 生年月日
              %span.require__form 必須
            .input_form
              %br/
              = f.date_select :birth_date, with_css_classes:'birthday-date', use_month_numbers: true,start_year: 1930, end_year: (Time.now.year - 10), default: Date.new(1989, 1, 1)
          .sign-form__box
            .require
              %span.require__list お届け先電話番号
              %span.require__form-sub 任意
            .input_form
              = f.text_field :phone, class: "form_text", placeholder: "例）090-1234-5678"
          .actions
            = f.submit "次へ進む", class: "submit-btn"
.sign-footer
  = render "sign_footer"