.sign__header
  .sign__header-icon
    = link_to image_tag('logo/logo.png',class: 'icon-image')
.sign__main
  .sign__main__contents
    = form_for(@user, url: user_registration_path) do |f|
      = render "devise/shared/error_messages", resource: @user
      .sign-main__header
        新規会員情報入力
      .sign-form
        .sign-form__box
          .require
            %span.require__list ニックネーム
            %span.require__form 必須
          .input_form
            = f.text_field :name, autofocus: true, maxlength: "8", class: "form_text", placeholder: "例)FURIMA一郎"
        .sign-form__box
          .require
            %span.require__list メールアドレス
            %span.require__form 必須
          .input_form
            = f.email_field :email, class: "form_text", placeholder: "@ドメイン含む" , autofocus: true, autocomplete: "email"
        .sign-form__box
          .require
            %span.require__list パスワード
            %span.require__form 必須
          .input_form
            = f.password_field :password, class: "form_text", placeholder: "英数字含む７文字以上" , autocomplete: "new-password"
        .sign-form__box
          .require
            %span.require__list 確認用パスワード
            %span.require__form 必須
          .input_form
            = f.password_field :password_confirmation, class: "form_text", placeholder: "同上のパスワードを入力" , autocomplete: "new-password"
        %li ※英字と数字の両方を含めて入力してください
        .actions
          = f.submit "次へ進む", class: "submit-btn"
.footer
  .main__footer
    .content__box
      %h2.content__head
        FURIMAについて
      %li.content__sub
        =link_to "会社概要（運営会社）",'/#'
      %li.content__sub
        =link_to "プライバシーポリシー",'/#'
      %li.content__sub
        =link_to "FURIMA利用規約",'/#'
    .content__box
      %h2.content__head
        FURIMAを見る
      %li.content__sub
        =link_to "カテゴリー一覧",'/#'
      %li.content__sub
        =link_to "ブランド一覧",'/#'
    .content__box
      %h2.content__head
        ヘルプ＆ガイド
      %li.content__sub
        =link_to "FURIMAガイド",'/#'
      %li.content__sub
        =link_to "FURIMAロゴ利用ガイドライン",'/#'
      %li.content__sub
        =link_to "お知らせ",'/#'
  .sign__footer
    = link_to image_tag("logo/logo-white.png",class: "footer__img"),root_path
  .footer__end
    ©FURIMA
