.sign__header
  .sign__header-icon
    = link_to image_tag('logo/logo.png',class: 'icon-image')
.sign__main
  .sign__main__contents
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .sign-form
        %h1 アカウントをお持ちでない方はこちら
        .sign-form__link
          - if devise_mapping.registerable? && controller_name != 'registrations'
            = link_to "新規会員登録", new_registration_path(resource_name)
            %br/
        .sign-form__box
          .require
            %span.require__list メールアドレス
          .input_form
            = f.email_field :email, autofocus: true, class: "form_text", autocomplete: "email"
        .sign-form__box
          .require
            %span.require__list パスワード
          .input_form
            = f.password_field :password, class: "form_text", autocomplete: "current-password"
          - if devise_mapping.rememberable?
            .field
              = f.check_box :remember_me
              = f.label :remember_me
          .actions
            = f.submit "ログイン", class: "submit-btn"
    %br/
    = render "devise/shared/links"
.footer
  .main__footer
    .content__box
      %h2.content__head
        FURIMAについて
      %li.content__sub
        =link_to "会社概要（運営会社）",'/#'
      %li.content__sub
        =link_to "プライバシーポリシー",'/#'
      %li.content__sub
        =link_to "FURIMA利用規約",'/#'
    .content__box
      %h2.content__head
        FURIMAを見る
      %li.content__sub
        =link_to "カテゴリー一覧",'/#'
      %li.content__sub
        =link_to "ブランド一覧",'/#'
    .content__box
      %h2.content__head
        ヘルプ＆ガイド
      %li.content__sub
        =link_to "FURIMAガイド",'/#'
      %li.content__sub
        =link_to "FURIMAロゴ利用ガイドライン",'/#'
      %li.content__sub
        =link_to "お知らせ",'/#'
  .sign__footer
    = link_to image_tag("logo/logo-white.png",class: "footer__img"),root_path
  .footer__end
    ©FURIMA
